{
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "es2021",
      "dom",
      "es2021.promise"
    ],
    "outDir": "dist",
    "module": "commonjs",
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "skipLibCheck": false,
    "strict": false,
    "incremental": true,
    "noEmit": true
  },
  "exclude": [
    "dist",
    ".next",
    "out",
    "next.config.js"
  ]
}
