{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "es2021",
      "dom",
      "es2021.promise"
    ],
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["dist", ".next", "out", "next.config.js"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}